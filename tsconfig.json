{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "./*.js",
    "src/**/*.ts",
    "test/**/*.ts",
    "types/**/*.ts",
  ],
}
